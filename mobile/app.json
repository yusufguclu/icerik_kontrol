{
    "expo": {
        "name": "EtiketKontrol",
        "slug": "etiket-kontrol",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#10B981"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.etiketkontrol.app",
            "infoPlist": {
                "NSCameraUsageDescription": "Ürün etiketlerini taramak için kamera erişimi gereklidir.",
                "NSPhotoLibraryUsageDescription": "Galeriden etiket fotoğrafı seçmek için erişim gereklidir."
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#10B981"
            },
            "package": "com.etiketkontrol.app",
            "permissions": [
                "android.permission.CAMERA",
                "android.permission.READ_EXTERNAL_STORAGE"
            ]
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            [
                "expo-camera",
                {
                    "cameraPermission": "Ürün etiketlerini taramak için kamera erişimi gereklidir."
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "Galeriden etiket fotoğrafı seçmek için erişim gereklidir."
                }
            ]
        ]
    }
}